<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.162"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.bmstu.main.Controller">
    <children>
        <TabPane fx:id="tabPane" layoutX="14.0" layoutY="14.0" prefHeight="744.0" prefWidth="1000.0"
                 tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="tabInput" text="Ввод">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TextArea fx:id="taInput" layoutX="7.0" layoutY="14.0" prefHeight="665.0"
                                          prefWidth="986.0"/>
                                <Button layoutX="7.0" layoutY="690.0" mnemonicParsing="false"
                                        onMouseClicked="#calculateIndexes" text="Построить индексы"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="tabResult" text="Результат">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TextArea fx:id="taResult" editable="false" layoutX="7.0" layoutY="14.0"
                                          prefHeight="665.0" prefWidth="986.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
